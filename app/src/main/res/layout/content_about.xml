<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.mongoose.app.moodio.AboutActivity"
    tools:showIn="@layout/activity_about"
    android:orientation="vertical"
    android:weightSum="1"
    android:layout_marginLeft="10dp">

    <ImageView
        android:layout_width="match_parent"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imageView"
        android:layout_height="140dp"
        android:layout_weight="0.09"
        android:layout_marginBottom="-20dp"
        android:adjustViewBounds="true"
        android:padding="15dp" />

    <com.mongoose.app.moodio.comp.MyTextView
        android:text="Ver. 1.0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textAlignment="center"
        android:textSize="16sp" />

    <Button
        android:text="Official Website"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_website"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_marginTop="20dp"
        android:textAlignment="textStart"
        tools:ignore="RtlCompat"
        style="@style/CardView"
        android:elevation="5dp"
        android:paddingLeft="10dp"
        android:background="@color/cardview_light_background" />

    <Button
        android:text="Contact us"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_contact"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textAlignment="textStart"
        tools:ignore="RtlCompat"
        style="@style/CardView"
        android:elevation="5dp"
        android:background="@color/cardview_light_background"
        android:paddingLeft="10dp" />

    <Button
        android:text="Terms &amp; Conditions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_tc"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textAlignment="textStart"
        tools:ignore="RtlCompat"
        style="@style/CardView"
        android:elevation="5dp"
        android:background="@color/cardview_light_background"
        android:paddingLeft="10dp" />

    <Button
        android:text="Privacy Policy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_pp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textAlignment="textStart"
        tools:ignore="RtlCompat"

        style="@style/CardView"
        android:elevation="5dp"
        android:background="@color/cardview_light_background"
        android:paddingLeft="10dp" />

    <com.mongoose.app.moodio.comp.MyTextView
        android:text="Â© 2017 Mongoose Inc."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cpy_rgt"
        android:layout_weight="0.09"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="14sp"
        android:paddingTop="20dp" />
</LinearLayout>
